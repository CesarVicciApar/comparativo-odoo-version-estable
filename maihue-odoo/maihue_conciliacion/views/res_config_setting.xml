<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="maihue_conciliacion_masiva_form" model="ir.ui.view">
        <field name="name">Conciliación Masiva</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Conciliación Masiva Data-String" string="Conciliación Masiva" data-key="maihue_conciliacion_config">

                    <h2>Opciones Generales</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class='o_setting_right_pane'>
                                <label for = "url_api_conciliacion"/>
                                <div class = "content-group">
                                    <field name ="url_api_conciliacion"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>