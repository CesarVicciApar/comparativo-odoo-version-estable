<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="stock_ready_confirm_form" model="ir.ui.view">
            <field name="name">stock.ready.confirm.form</field>
            <field name="model">stock.ready.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirme proceso finalizado">
                    <sheet>
                        <group>
                            <p>
                                Por favor confirme que desea pasar la solicitud a estado "Listo".
                            </p>
                        </group>
                        <footer>
                            <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight"/>
                            <button string="Cancelar" class="btn btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>